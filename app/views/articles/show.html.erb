<article id="article">
  <div class="article-banner" style="background-image: url(<%= @article.image.src.url %>);">
    <div class="container header">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h1 class="my-sm-20"><%= @article.title %></h1>    
          <div class="date">
            <h5><%= @article.created_at.to_date %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="article-content-wrapper py-xs-20 py-sm-40">
          <%= @article.content.html_safe %>
        </div>
        <div class="tags my-xs-20 my-sm-40">
          <h3>Tags</h3>
          <% @article.categories.each do |cat| %>
            <%= link_to cat.name, category_path(cat.permalink), class: 'btn btn-default btn-lg mr-xs-10' %>
          <% end %>
        </div>
      </div>
      <div id="disqus_thread" class="mb-xs-20"></div>
    </div>
  </div>
</article>