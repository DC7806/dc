<%= link_to "Add Category", new_admin_category_path, class: "btn btn-default my-xs-20 form-control"%>

<table class="table xs-transform mt-sm-40">
  <thead class="hidden-xs">
    <tr>
      <td class="col-sm-2">Date</td>
      <td class="col-sm-2">Image</td>
      <td class="col-sm-6">Name</td>
    </tr>
  </thead>
  <tbody>
    <% @admin_categories.each do |category|%>
    <tr>
      <td class="col-sm-2"><%= category.created_at.to_date %></td>
      <td class="col-sm-2"><%= image_tag category.image.src.url(:thumb_200), class: 'wt-100' %></td>
      <td class="col-sm-6"><%= category.name %></td>
      <td class="col-sm-1 text-center">
        <%= link_to edit_admin_category_path(category), class: "btn btn-default mb-sm-5" do %>
          <i class="fa fa-bolt fa-fw"></i>
        <% end %>
        <%= link_to admin_category_path(category), method: "delete", data: { confirm: "Sure?" }, class: "btn btn-default" do%>
          <i class="fa fa-bomb fa-fw"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>