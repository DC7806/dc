<div id="profile" class="my-xs-20 my-sm-40">
  <div class="container">
    <div class="row">
      
      <div class="col-sm-8 col-sm-offset-2 text-center">
        <h1 class="mt-xs-0 mb-xs-20"><%= @site_name %></h1>
        <%= image_tag @picture, alt: 'DC', class: 'col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 profile-pic' %>  
        <div class="clear mt-xs-20 mt-sm-30">
        <h2 class="mt-xs-20"><%= @name %></h2>
        <h3 class="mb-xs-20"><%= @email %></h3>
          <div class="summary-wrapper pt-xs-20">
            <%= @summary %>
            <p>
              <%= link_to "https://github.com/#{@github_handle}", target: '_blank' do %>
                <i class="fa fa-github fa-2x fa-fw"></i>    
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <div class="clear col-sm-10 col-sm-offset-1">
        <h2 class="text-center mb-xs-0">Latest Articles</h2>
        <ul class="article-list">
        <% @articles.each do |article| %>
          <li class="overflow-auto py-xs-10 py-xs-20">
            <article class="article-list-item">
              <%= link_to article_path(article.permalink) do %>
              <h3 class="pull-left"><%= article.title %></h3>
              <% end %>
              <span class="pull-right"><%= article.created_at.to_date %></span>
            </article>
          </li>
        <% end %>
        </ul>
        <h2 class="text-center mt-sm-40 mb-xs-15 mb-sm-20"> Latest Works</h2>
        <div class="row">
        <% @portfolios.first(2).each do |port| %>
          <div class="col-sm-6 px-xs-0 px-sm-15 mb-xs-20 portfolio-item">
            <%= image_tag port.image.src.url, alt: port.image.alt %>
            <div class="px-xs-15 px-sm-0">
              <h3 class="mt-xs-10 mb-xs-5"><%= port.title %></h3>
              <span class="mb-xs-10 block"><%= port.portfolio_type %></span>
              <%= link_to port.permalink, target: '_blank', class: 'btn btn-default mb-xs-5' do %>
                <i class="fa fa-desktop fa-2x fa-fw"></i>
              <% end %>
              <%= repo_link port.repo %>
            </div>
          </div>
        <% end %>
        </div>
        <div class="row">
        <% @portfolios.last(2).each do |port| %>
          <div class="col-sm-6 px-xs-0 px-sm-15 mb-xs-20 portfolio-item">
            <%= image_tag port.image.src.url, alt: port.image.alt %>
            <div class="px-xs-15 px-sm-0">
              <h3 class="mt-xs-10 mb-xs-5"><%= port.title %></h3>
              <span class="mb-xs-10 block"><%= port.portfolio_type %></span>
              <%= link_to port.permalink, target: '_blank', class: 'btn btn-default mb-xs-5' do %>
                <i class="fa fa-desktop fa-2x fa-fw"></i>
              <% end %>
              <%= repo_link port.repo %>
            </div>
          </div>
        <% end %>
        </div>
        <%= link_to "All Works", portfolios_path, class: 'btn btn-default form-control mt-xs-20' %>
      </div>
    </div>
  </div>
</div>